import 'package:flutter/material.dart';
import 'package:weather_icons/weather_icons.dart';

void main() {
  runApp(WeatherApp());
}

class WeatherApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: WeatherScreen(),
    );
  }
}

class WeatherScreen extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.blue.shade200,
      body: SafeArea(
        child: Column(
          children: [
            // Top Info
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 20.0, vertical: 12),
              child: Row(
                mainAxisAlignment: MainAxisAlignment.spaceBetween,
                children: [
                  Text(
                    "CONCEPCION",
                    style: TextStyle(
                      fontSize: 24,
                      fontWeight: FontWeight.bold,
                      color: Colors.white,
                      letterSpacing: 1.5,
                    ),
                  ),
                  Row(
                    children: [
                      Icon(Icons.add, color: Colors.white),
                      SizedBox(width: 12),
                      Icon(Icons.location_on, color: Colors.white),
                      SizedBox(width: 12),
                      Icon(Icons.settings, color: Colors.white),
                    ],
                  ),
                ],
              ),
            ),

            // Temperature & Status
            SizedBox(height: 10),
            Text(
              "24°C",
              style: TextStyle(fontSize: 72, color: Colors.white, fontWeight: FontWeight.bold),
            ),
            Text(
              "CLOUDY",
              style: TextStyle(fontSize: 20, color: Colors.white),
            ),
            Text(
              "24 - 30°C",
              style: TextStyle(fontSize: 18, color: Colors.white70),
            ),
            SizedBox(height: 20),
            BoxedCloud(),

            // Hourly Forecast
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 20, vertical: 20),
              child: Container(
                padding: EdgeInsets.all(10),
                decoration: BoxDecoration(
                  color: Colors.blue.shade400.withOpacity(0.4),
                  borderRadius: BorderRadius.circular(12),
                ),
                child: Column(
                  children: [
                    Text(
                      "Partly cloudy conditions expected around 7PM.",
                      style: TextStyle(color: Colors.white),
                    ),
                    SizedBox(height: 10),
                    Row(
                      mainAxisAlignment: MainAxisAlignment.spaceAround,
                      children: [
                        HourlyWeather("Now", WeatherIcons.day_sunny, "66°"),
                        HourlyWeather("7PM", WeatherIcons.day_cloudy, "65°"),
                        HourlyWeather("7:25PM", WeatherIcons.sunset, "Sunset"),
                        HourlyWeather("8PM", WeatherIcons.cloudy, "62°"),
                        HourlyWeather("9PM", WeatherIcons.cloudy, "60°"),
                        HourlyWeather("10PM", WeatherIcons.night_clear, "57°"),
                      ],
                    )
                  ],
                ),
              ),
            ),

            // 10-Day Forecast
            Expanded(
              child: Container(
                margin: EdgeInsets.symmetric(horizontal: 20),
                padding: EdgeInsets.all(10),
                decoration: BoxDecoration(
                  color: Colors.blue.shade400.withOpacity(0.5),
                  borderRadius: BorderRadius.circular(15),
                ),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Text("10-DAY FORECAST", style: TextStyle(color: Colors.white)),
                    SizedBox(height: 10),
                    Expanded(
                      child: ListView(
                        children: [
                          ForecastRow("Today", WeatherIcons.day_cloudy, 20, 32),
                          ForecastRow("Mon", WeatherIcons.day_sunny_overcast, 23, 34),
                          ForecastRow("Tue", WeatherIcons.day_sunny, 23, 32),
                          ForecastRow("Wed", WeatherIcons.day_cloudy, 24, 33),
                          ForecastRow("Thu", WeatherIcons.day_sunny_overcast, 23, 31),
                          ForecastRow("Fri", WeatherIcons.day_cloudy_high, 21, 31),
                          ForecastRow("Sat", WeatherIcons.day_sunny, 23, 34),
                          ForecastRow("Sun", WeatherIcons.cloud, 20, 31),
                          ForecastRow("Mon", WeatherIcons.day_sunny, 17, 24),
                          ForecastRow("Tue", WeatherIcons.day_sunny, 16, 26),
                        ],
                      ),
                    )
                  ],
                ),
              ),
            )
          ],
        ),
      ),
    );
  }
}

// Widgets

class HourlyWeather extends StatelessWidget {
  final String time;
  final IconData icon;
  final String temp;

  HourlyWeather(this.time, this.icon, this.temp);

  @override
  Widget build(BuildContext context) {
    return Column(
      children: [
        Text(time, style: TextStyle(color: Colors.white, fontSize: 12)),
        SizedBox(height: 5),
        BoxedIcon(icon, color: Colors.white),
        SizedBox(height: 5),
        Text(temp, style: TextStyle(color: Colors.white, fontSize: 12)),
      ],
    );
  }
}

class ForecastRow extends StatelessWidget {
  final String day;
  final IconData icon;
  final int minTemp;
  final int maxTemp;

  ForecastRow(this.day, this.icon, this.minTemp, this.maxTemp);

  @override
  Widget build(BuildContext context) {
    return Padding(
      padding: const EdgeInsets.symmetric(vertical: 4.0),
      child: Row(
        children: [
          SizedBox(
              width: 60,
              child: Text(day, style: TextStyle(color: Colors.white))),
          SizedBox(width: 10),
          BoxedIcon(icon, color: Colors.white, size: 20),
          SizedBox(width: 10),
          Text("$minTemp°", style: TextStyle(color: Colors.white70)),
          Expanded(
            child: Padding(
              padding: const EdgeInsets.symmetric(horizontal: 10.0),
              child: LinearProgressIndicator(
                value: (maxTemp - minTemp) / 50,
                backgroundColor: Colors.yellow.shade100,
                valueColor: AlwaysStoppedAnimation<Color>(Colors.orange),
              ),
            ),
          ),
          Text("$maxTemp°", style: TextStyle(color: Colors.white)),
        ],
      ),
    );
  }
}

class BoxedCloud extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Icon(
      WeatherIcons.cloudy,
      size: 80,
      color: Colors.white70,
    );
  }
}
